@model GBC_Travel_Group_45.Models.Booking

@{
    ViewData["Title"] = "Edit Booking";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditBooking" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FlightId">Select Flight</label>
        <select asp-for="FlightId" asp-items="@(new SelectList(ViewBag.Flights, "Value", "Text"))" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="Passenger.FirstName">First Name</label>
        <input asp-for="Passenger.FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Passenger.LastName">Last Name</label>
        <input asp-for="Passenger.LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Passenger.Email">Email</label>
        <input asp-for="Passenger.Email" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a href="@Url.Action("ViewBooking")" class="btn btn-secondary">Back to Bookings</a>
