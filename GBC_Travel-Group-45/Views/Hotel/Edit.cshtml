@model GBC_Travel_Group_45.Models.Hotel

<h2>Edit Hotel</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    
    <div>
        <label asp-for="HotelName"></label>
        <input asp-for="HotelName" />
    </div>
    <div>
        <label asp-for="Location"></label>
        <input asp-for="Location" />
    </div>
    <div>
        <label asp-for="SingleRoomsCount"></label>
        <input asp-for="SingleRoomsCount" type="number" />
    </div>
    <div>
        <label asp-for="DoubleRoomsCount"></label>
        <input asp-for="DoubleRoomsCount" type="number" />
    </div>
    <div>
        <label asp-for="SingleRoomPrice"></label>
        <input asp-for="SingleRoomPrice" type="number" step="0.01" />
    </div>
    <div>
        <label asp-for="DoubleRoomPrice"></label>
        <input asp-for="DoubleRoomPrice" type="number" step="0.01" />
    </div>
    
    <div>
        <label for="imageFile">Upload Images</label>
        <input type="file" id="imageFile" name="images" multiple /> 
    </div>
    
    @foreach (var image in Model.Images)
    {
        <img src="@image.ImagePath" alt="Hotel Image" style="max-width: 200px; margin-bottom: 10px;" />
    }
  
    <button type="submit">Save Changes</button>
</form>
