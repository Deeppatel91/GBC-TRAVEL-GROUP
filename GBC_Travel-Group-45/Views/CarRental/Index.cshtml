@model IEnumerable<GBC_Travel_Group_45.Models.Car>

<div class="container mt-4 ">
    <div class="row justify-content-between align-items-center mb-4">
        <div class="col">
            <h2>Cars</h2>
        </div>
        <div class="col text-right">
            <a href="@Url.Action("Create", "CarRental")" class="btn btn-success">Add Another Car</a>
        </div>
    </div>

    <div class="row">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    @if (car.CarImages.Any())
                    {
                        <img src="@Url.Content(car.CarImages.First().ImagePath)" class="card-img-top car-img" alt="Car Image">
                    }
                    else
                    {
                        <img src="@Url.Content("~/images/cars/default-car.jpg")" class="card-img-top car-img" alt="Default Car Image">
                    }
                    <div class="card-body">
                        <h5 class="card-title">@car.Make @car.Model</h5>
                        <p class="card-text">
                            Year: @car.Year <br>
                            Color: @car.Color <br>
                            Seats: @car.NumOfSeats <br>
                            Price Per Day: $@car.PricePerDay
                        </p>
                        <a href="@Url.Action("Edit", "CarRental", new { id = car.Id })" class="btn btn-secondary"><i class="fa-solid fa-pen"></i> Edit</a>
                        <a href="@Url.Action("Delete", "CarRental", new { id = car.Id })" class="btn btn-danger"><i class="fa-solid fa-trash-can"></i> Delete</a>
                    </div>
                    <a href="@Url.Action("Book", "CarRental", new { id = car.Id })" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        }
    </div>
</div>
