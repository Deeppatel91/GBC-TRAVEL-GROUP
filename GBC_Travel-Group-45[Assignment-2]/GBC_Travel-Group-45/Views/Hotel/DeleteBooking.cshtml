@model GBC_Travel_Group_45.Models.HotelBooking

<h2>Delete Booking</h2>

<form asp-action="DeleteBookingConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete this booking?</p>
    <div>
        <label>Booking for:</label> @Model.Guest.FirstName @Model.Guest.LastName
    </div>
    <div>
        <label>Dates:</label> @Model.BookingStart.ToShortDateString() - @Model.BookingEnd.ToShortDateString()
    </div>
    <button type="submit" value="Delete">Delete</button>
    <a asp-action="ViewBookings">Cancel</a>
</form>
