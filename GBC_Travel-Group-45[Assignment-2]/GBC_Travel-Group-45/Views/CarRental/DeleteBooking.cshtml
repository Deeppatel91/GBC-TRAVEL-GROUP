@model GBC_Travel_Group_45.Models.CarBooking

<h2>Delete Booking</h2>

<form asp-action="DeleteBooking" method="post">
    <input type="hidden" asp-for="Id" />
    <p>Are you sure you want to delete this booking?</p>
    <div>
        <label>Car: @Model.Car.Make @Model.Car.Model</label>
    </div>
    <div>
        <label>Dates: @Model.BookingStart.ToShortDateString() - @Model.BookingEnd.ToShortDateString()</label>
    </div>
    
    <button type="submit" value="Delete">Delete</button>
    <a asp-action="ViewBookings">Cancel</a>
</form>