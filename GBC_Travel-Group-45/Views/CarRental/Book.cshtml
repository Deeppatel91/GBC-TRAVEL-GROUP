@model GBC_Travel_Group_45.Models.CarBooking

<h2>Book a Car</h2>

<form asp-action="Book" method="post">
    <div class="form-group">
        <label asp-for="CarId" class="control-label">Select Car</label>
        <select asp-for="CarId" class="form-control" asp-items="@ViewBag.Cars"></select>
    </div>

    <div class="form-group">
        <label asp-for="BookingStart" class="control-label">Booking Start Date</label>
        <input asp-for="BookingStart" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BookingEnd" class="control-label">Booking End Date</label>
        <input asp-for="BookingEnd" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label for="guestFirstName">First Name</label>
        <input type="text" class="form-control" name="guestFirstName" required />
    </div>

    <div class="form-group">
        <label for="guestLastName">Last Name</label>
        <input type="text" class="form-control" name="guestLastName" required />
    </div>

    <div class="form-group">
        <label for="governmentId">Government ID</label>
        <input type="text" class="form-control" name="governmentId" required />
    </div>

    <div class="form-group">
        <label asp-for="PickupLocation" class="control-label">Pickup Location</label>
        <select asp-for="PickupLocation" class="form-control">
            <option value="Location1">Location 1</option>
            <option value="Location2">Location 2</option>
            <option value="Location3">Location 3</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="DropLocation" class="control-label">Drop Location</label>
        <select asp-for="DropLocation" class="form-control">
            <option value="LocationA">Location A</option>
            <option value="LocationB">Location B</option>
            <option value="LocationC">Location C</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Book Now</button>
</form>