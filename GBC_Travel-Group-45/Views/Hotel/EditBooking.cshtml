@model GBC_Travel_Group_45.Models.HotelBooking
<system.web>
    <customErrors mode="Off" />
</system.web>
<system.webServer>
    <httpErrors errorMode="Detailed" />
</system.webServer>
<h2>Edit Booking</h2>

<form asp-action="EditBooking" asp-controller="Hotel" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="BookingStart">Booking Start</label>
        <input asp-for="BookingStart" class="form-control" />
        <span asp-validation-for="BookingStart" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="BookingEnd">Booking End</label>
        <input asp-for="BookingEnd" class="form-control" />
        <span asp-validation-for="BookingEnd" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Guest.FirstName">First Name</label>
        <input asp-for="Guest.FirstName" class="form-control" />
        <span asp-validation-for="Guest.FirstName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Guest.LastName">Last Name</label>
        <input asp-for="Guest.LastName" class="form-control" />
        <span asp-validation-for="Guest.LastName" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Guest.Age">Age</label>
        <input asp-for="Guest.Age" class="form-control" />
        <span asp-validation-for="Guest.Age" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Guest.GovernmentId">Government ID</label>
        <input asp-for="Guest.GovernmentId" class="form-control" />
        <span asp-validation-for="Guest.GovernmentId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Booking</button>
</form>
