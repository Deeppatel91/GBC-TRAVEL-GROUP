@model GBC_Travel_Group_45.Models.Flight

@{
    ViewData["Title"] = "Delete Flight";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this flight?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>Flight Number</dt>
        <dd>@Html.DisplayFor(model => model.FlightNumber)</dd>
        <dt>Origin</dt>
        <dd>@Html.DisplayFor(model => model.Origin)</dd>
        <dt>Destination</dt>
        <dd>@Html.DisplayFor(model => model.Destination)</dd>
        <dt>Departure Time</dt>
        <dd>@Html.DisplayFor(model => model.DepartureTime)</dd>
        <dt>Arrival Time</dt>
        <dd>@Html.DisplayFor(model => model.ArrivalTime)</dd>
        <dt>Price</dt>
        <dd>@Html.DisplayFor(model => model.Price)</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post" class="form12" style="background-color: transparent">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this flight?');" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
